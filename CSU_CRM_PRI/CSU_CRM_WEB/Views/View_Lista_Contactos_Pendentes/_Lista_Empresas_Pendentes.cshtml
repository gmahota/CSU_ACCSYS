        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fac_Mor)
        </td>
        
        
        
        <td>
            @Html.DisplayFor(modelItem => item.Fac_Tel)
        </td>
        
        
        
        <td>
            @Html.DisplayFor(modelItem => item.PrimeiroNome) @Html.DisplayFor(modelItem => item.UltimoNome)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        

        <td>
            @item.ValorPendente.Value.ToString("N", System.Globalization.CultureInfo.CreateSpecificCulture("pt-PT"))
        </td>
        <td>
            @item.ValorTotal.Value.ToString("N", System.Globalization.CultureInfo.CreateSpecificCulture("pt-PT"))
        </td>
        
