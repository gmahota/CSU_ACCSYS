@using (Html.BeginForm(Html.BeginForm("Lista_Empresas_Pendentes", "View_Lista_Contactos_Pendentes",
    new { empresa = ViewBag.empresabd }, FormMethod.Post, new { encType = "multipart/form-data" })))
{
    int i = 0;
    @Html.AntiForgeryToken()

<p>
    <div class="row">
        @*<div class="col-md-3">
            <button class="btn btn-default"> <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Enviar Email</button>
        </div>*@
        <div class="col-md-3">
            <button class="btn btn-default"> <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span> Enviar Email Cobranças</button>
        </div>

        <div class="col-md-3">
            <input type="file" name="file1" />
            <input type="file" name="file2" />
        </div>

    </div>
    
</p>

<table class="table">
    <tr>
        <th>
            Sel.
