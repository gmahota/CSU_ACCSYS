@model IEnumerable<CSU_CRM_WEB.Models.View_Empresas>

<div >
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-clock-o fa-fw"></i> Empresas</h3>
        </div>

        <div class="panel-body">
            <div class="list-group">

            @foreach (var item in Model)
            {
                <a href="@Url.Action("Details", "View_Empresas", new { id = item.Codigo })" class="list-group-item">
                    @*<span class="badge">just now</span>*@
                    
                    <i><img height="20" width="20"  src="@Url.Content("~/Content/Images/LogoEmpresas/" + item.Codigo +".png")" alt="IMAGES"></i> @Html.DisplayFor(modelItem => item.IDNome)
                </a>
            }

            </div>
        </div>
    </div>
</div>
